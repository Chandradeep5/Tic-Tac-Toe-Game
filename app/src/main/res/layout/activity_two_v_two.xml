<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/twoVTwoLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_wallpaper"
    tools:context=".TwoVTwoActivity">

    <!-- Frosted Glass Container -->
    <LinearLayout
        android:id="@+id/containerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_glass_light"
        android:padding="20dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="32dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two V Two"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:gravity="center" />

        <!-- Turn Status -->
        <TextView
            android:id="@+id/tvTurnStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Xâ€™s Turn"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <!-- Player Icons Row -->
        <LinearLayout
            android:id="@+id/playerIconsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="40dp">

            <ImageView
                android:id="@+id/playerXIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_player_x"
                android:contentDescription="Player X Icon"
                android:background="@drawable/glow_icon_background"
                android:padding="8dp"
                android:layout_gravity="start" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/playerOIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_player_o"
                android:contentDescription="Player O Icon"
                android:background="@drawable/glow_icon_background"
                android:padding="8dp"
                android:layout_gravity="end" />
        </LinearLayout>

        <!-- Winner Display -->
        <TextView
            android:id="@+id/tvWinner"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:visibility="invisible" />

        <!-- Tic Tac Toe Grid -->
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <Button android:id="@+id/btn00" style="@style/GridButtonStyle" />
            <Button android:id="@+id/btn01" style="@style/GridButtonStyle" />
            <Button android:id="@+id/btn02" style="@style/GridButtonStyle" />
            <Button android:id="@+id/btn10" style="@style/GridButtonStyle" />
            <Button android:id="@+id/btn11" style="@style/GridButtonStyle" />
            <Button android:id="@+id/btn12" style="@style/GridButtonStyle" />
            <Button android:id="@+id/btn20" style="@style/GridButtonStyle" />
            <Button android:id="@+id/btn21" style="@style/GridButtonStyle" />
            <Button android:id="@+id/btn22" style="@style/GridButtonStyle" />
        </GridLayout>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/btnRestart"
                android:text="Restart"
                style="@style/ControlButtonStyle" />

            <Button
                android:id="@+id/btnExit"
                android:text="Exit"
                style="@style/ControlButtonStyle"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
