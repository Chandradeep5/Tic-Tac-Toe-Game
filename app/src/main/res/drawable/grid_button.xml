<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state (when tapped) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#cfcfcf"
                android:endColor="#aaaaaa"
                android:angle="270"/>
            <corners android:radius="14dp" />
            <stroke android:width="2dp" android:color="#888888"/>
            <padding android:bottom="8dp" android:top="8dp"/>
        </shape>
    </item>

    <!-- Default (normal) state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ffffff"
                android:endColor="#e5e5e5"
                android:angle="270"/>
            <corners android:radius="14dp" />
            <stroke android:width="2dp" android:color="#b0b0b0"/>
            <padding android:bottom="8dp" android:top="8dp"/>
        </shape>
    </item>

</selector>
