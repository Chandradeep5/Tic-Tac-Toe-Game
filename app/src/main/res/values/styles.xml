<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ✅ Global App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColor">#212121</item>
    </style>

    <!-- ✅ Glass Button (Large) -->
    <style name="GlassButtonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:background">@drawable/btn_glass_effect</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:stateListAnimator">@animator/btn_press_anim</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- ✅ Glass Button (Small) -->
    <style name="GlassSmallButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#212121</item>
        <item name="android:background">@drawable/btn_glass_effect_small</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- ✅ General Glass Button -->
    <style name="GlassButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/glass_button_bg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- ✅ Small Variant -->
    <style name="GlassButton.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/glass_button_bg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- ✅ Grid Buttons (for calculator-style layouts or keyboards) -->
    <style name="GridButtonStyle">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:background">@drawable/glow_button</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- ✅ Control Buttons (smaller actions like "Send", "Cancel", etc.) -->
    <style name="ControlButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_glass_light</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="GridButtonStyle1">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">28sp</item>
        <item name="android:background">@drawable/grid_button_bg</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="GlassDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="RoundedDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>



</resources>
